{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "default:automergeBranchPush",
    "group:all",
    "schedule:automergeEarlyMondays",
  ],
  "automerge": true,
  "automergeType": "branch",
  "labels": ["Dependency"],
  "minimumReleaseAge": "1 week",
  "packageRules": [
    {
      "automerge": true,
      "automergeType": "branch",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "minimumReleaseAge": "1 week",
    }
  ],
  "cdnurl": {
    "fileMatch": [
      "^\\.esbuild\\.mjs$"
    ]
  },
}
